!!!
%html
  %head
    %title Dolmatch
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = favicon_link_tag
  %body.landing-page
    .big-image
      .header
        .container
          .row
            .col-lg-6= image_tag 'dolmatch.png'
            .col-lg-6.text-right= render 'shared/navbar'

      .container
        .row
          .col-lg-12.text-center= yield :big_picture

    .container
      .row
        .col-lg-12.text-center= yield

    .footer= render 'shared/footer'
