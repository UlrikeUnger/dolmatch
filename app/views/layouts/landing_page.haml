!!!
%html
  %head
    %title Dolmatch
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = favicon_link_tag
  %body.landing-page
    .big-image
      .header
        .container
          .row
            .col-lg-6= image_tag 'dolmatch.png'
            .col-lg-6.text-right
              - if current_interpreter
                = link_to 'Logout', destroy_interpreter_session_path, data: {method: :delete}
              - elsif current_organisation
                = link_to 'Edit', edit_organisation_path(current_organisation)
                = link_to 'Logout', destroy_organisation_session_path, data: {method: :delete}

      .container
        .row
          .col-lg-12.text-center
            = yield
